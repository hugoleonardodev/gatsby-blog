{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-perf/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-react",
        "eslint-plugin-react-hooks",
        "eslint-plugin-react-perf",
        "eslint-plugin-react-hooks",
        "eslint-plugin-import"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": [2, "single"]
    }
}
